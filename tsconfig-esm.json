{
  "include": [
    "./src"
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./esm",
    "removeComments": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES6"
  }
}
